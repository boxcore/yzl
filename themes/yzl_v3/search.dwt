<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="Keywords" content="{$keywords}" />
<meta name="Description" content="{$description}" />
<!-- TemplateBeginEditable name="doctitle" -->
<title>{$page_title}</title>
<!-- TemplateEndEditable --><!-- TemplateBeginEditable name="head" --><!-- TemplateEndEditable -->
<link rel="shortcut icon" href="favicon.ico" />
<link rel="icon" href="animated_favicon.gif" type="image/gif" />
<link href="{$ecs_css_path}" rel="stylesheet" type="text/css" />
{* 包含脚本文件 *}
{insert_scripts files='utils.js,common.js,global.js,compare.js'}
</head>
<body>
<!-- #BeginLibraryItem "/library/page_header.lbi" --><!-- #EndLibraryItem -->


<div class="inner_banner"></div>
<div class="inner_content">
    <div class="innernews_left">
        <!-- TemplateBeginEditable name="左边区域" -->
        <!-- {if $article_categories} -->
        <!-- #BeginLibraryItem "/library/article_category_tree.lbi" --><!-- #EndLibraryItem -->
        <!-- {/if} -->
        <!-- TemplateEndEditable -->
    </div>

    <div class="innernews_right">
        <div class="product_list">
            <div class="list_search_box">
                <h2 class="list_search">搜索到<span>{$search_info.count}</span>条关于'{$search_keywords|escape}'的结果</h2>
                <ul class="up_date">
                    <li class="sales current"><span><a href="#">销量</a></span></li>
                    <li class="price"><span><a href="#">价格</a></span></li>
                    <li class="news_arrive"><span><a href="#">最新上架</a></span></li>
                </ul>
            </div>
            
                <div class="sales_box">
                    <!--{if $goods_list}-->
                    <form action="compare.php" method="post" name="compareForm" id="compareForm" onsubmit="return compareGoods(this);">
                        <ul>
                            <!--{foreach name=goods_list from=$goods_list item=goods}-->
                            <li>
                                <div class="pic_box"><a href="{$goods.url}"><img src="{$goods.goods_thumb}" width="47" height="172" alt="{$goods.goods_name}"></a></div>
                                <div class="introduce">
                                    <h2><a href="{$goods.url}"><!-- {if $goods.goods_style_name} -->{$goods.goods_style_name}<!-- {else} -->{$goods.goods_name}<!-- {/if} --></a></h2>
                                    <p>净颜活肤 极致嫩白</p>
                                    <span>5片装 25g/片</span>
                                    <strong>
                                    <!--{if $goods.promote_price neq "" } -->{$goods.promote_price}<!--{else}-->{$goods.shop_price}<!--{/if}-->
                                    </strong>
                                    <div class="btn"><a href="javascript:addToCart({$goods.goods_id})"><img src="images/buy_now.jpg" width="86" height="21" alt="立即购买"></a><a href="#" class="shopping_cart"><img src="images/shoping_cart.jpg" width="96" height="21"></a></div>
                                    <p>已售出 6 件 </p>
                                </div>
                            </li>
                            <!--{/foreach}--> 
                        </ul>
                    </form>
                    <script type="text/javascript">
                        {foreach from=$lang.compare_js item=item key=key}
                        var {$key} = "{$item}";
                        {/foreach}

                                                {foreach from=$lang.compare_js item=item key=key}
                        {if $key neq 'button_compare'}
                        var {$key} = "{$item}";
                        {else}
                        var button_compare = '';
                        {/if}
                        {/foreach}


                        var compare_no_goods = "{$lang.compare_no_goods}";
                        window.onload = function()
                        {
                          Compare.init();
                          fixpng();
                        }
                        var btn_buy = "{$lang.btn_buy}";
                        var is_cancel = "{$lang.is_cancel}";
                        var select_spe = "{$lang.select_spe}";
                    </script> 
                    <!-- #BeginLibraryItem "/library/pages.lbi" --><!-- #EndLibraryItem -->
                    <!--{else}-->
                        <div style="padding:20px 0px; text-align:center" class="f5" >{$lang.no_search_result}</div>
                    <!-- {/if} -->
                </div>
            
        </div>
    </div>


</div>



<div class="blank"></div>
<!-- #BeginLibraryItem "/library/page_footer.lbi" --><!-- #EndLibraryItem -->
</body>
</html>
