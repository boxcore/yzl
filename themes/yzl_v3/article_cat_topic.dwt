<!DOCTYPE HTML>
<html lang="en-US">
<head>
    <!-- #BeginLibraryItem "/library/common/head.lbi" --><!-- #EndLibraryItem -->
  {insert_scripts files='index.js'}
</head>
<body>
<!-- #BeginLibraryItem "/library/page_header.lbi" --><!-- #EndLibraryItem -->

<div class="content">
    <h1 class="active_tittle">{$cat_info.cat_name|escape:html}</h1>
    <div class="sale_offer_box">
        <ul>
            <!-- {foreach from=$artciles_list item=article name=foo} -->
            <li {if ($smarty.foreach.foo.iteration % 3 == 0) && ($smarty.foreach.foo.iteration != 0)}class="no_margin"{/if}>
                <a href="{$article.url}"><img src="{$article.original_img}" width="319" height="145"></a>
                <h4 class="tittle"><a href="{$article.url}">{$article.short_title}</a></h4>
                <p><a href="{$article.url}">{$article.content|escape:html}</a></p>
                <span><a href="{$article.url}">查看详情&gt;&gt;</a></span>
            </li>
            <!-- {/foreach} -->
        </ul>

    </div>
    <div class="clear"></div>
    <div class="clearfix"></div>
    {if $pager.page_count gt 1}
    <!-- #BeginLibraryItem "/library/pages_article_cat.lbi" --><!-- #EndLibraryItem -->
    {/if}
</div>


<!-- #BeginLibraryItem "/library/page_footer.lbi" --><!-- #EndLibraryItem -->
</body>
<script>
    jQuery(document).ready(function() {
     $("a.icon_f_style ").hover(function(){
         var image_name_2 = $(this).attr("data2");
         $("img", this).attr("src", image_name_2);
    },function(){
         var image_name_1 = $(this).attr("data1");
         $("img", this).attr("src", image_name_1);
    });

    });
</script>
</html>
