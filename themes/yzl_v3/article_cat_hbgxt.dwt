<!-- #BeginLibraryItem "/library/common/page_footer.lbi" --><!-- #EndLibraryItem -->
</body>
<script>
    $(function() {
        $(".the_flower_box li").hover(function(){
            $(this).find(".hide").attr({style:"display:block"});
            $(this).find(".show").attr({style:"display:none"});
        },function(){
            $(this).find(".hide").attr({style:"display:none"});
            $(this).find(".show").attr({style:"display:block"});
        });

    });
</script>
